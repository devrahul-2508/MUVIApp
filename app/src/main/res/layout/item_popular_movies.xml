<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/blue_shade_2"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:id="@+id/imageTvShow"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/imageTvShow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageTvShow"
            android:textSize="@dimen/_13ssp"
            android:paddingTop="@dimen/_8sdp" />

        <TextView
            android:id="@+id/textLanguage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_3sdp"
            android:includeFontPadding="false"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="@id/textName"
            app:layout_constraintStart_toStartOf="@id/textName"
            app:layout_constraintTop_toBottomOf="@id/textName" />


        <TextView
            android:id="@+id/textReleaseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text='Release Date'
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_3sdp"
            android:includeFontPadding="false"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/textName"
            app:layout_constraintEnd_toEndOf="@id/textName"
            app:layout_constraintTop_toBottomOf="@id/textLanguage" />


        <TextView
            android:id="@+id/textPopularity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Popularity"
            android:layout_marginTop="@dimen/_3sdp"
            android:includeFontPadding="false"
            android:textColor="@android:color/holo_green_light"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/textName"
            app:layout_constraintEnd_toEndOf="@id/textName"
            app:layout_constraintTop_toBottomOf="@id/textReleaseDate" />

        <View
            android:id="@+id/viewSupporter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/imageTvShow" />



    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.cardview.widget.CardView>